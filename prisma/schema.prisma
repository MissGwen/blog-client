generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 文章
model Article {
  id Int @id @default(autoincrement())
  // 创建时间
  create_time DateTime @default(now())
  // 更新时间
  update_time DateTime
  // 文章标题
  title String
  // 文章内容
  content String @db.LongText
  // 简介
  intro String
}
